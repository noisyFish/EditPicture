<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/edit_picture_top_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:background="@color/photo_banner_black"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp" >
        <TextView
            android:id="@+id/edit_picture_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:text="取消"
            android:textSize="16sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/edit_picture_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/selecte_photo_detail_ok"
            android:textColor="@color/send_text_detail_photo"
            android:textSize="16sp" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/edit_picture_top_layout"
        android:layout_above="@+id/edit_picture_bottom_layout"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.editpicdemo.widget.zoomimageview.ZoomImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_edit_ok"
            android:visibility="visible" />
        <com.example.editpicdemo.widget.pictureeditor.graffiti.DrawZoomImageView
            android:id="@+id/graffiti_view"
            android:background="@color/black"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.example.editpicdemo.widget.pictureeditor.mosaic.MosaicView
            android:id="@+id/mosaic_imageview"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.theartofdev.edmodo.cropper.CropImageView
            android:id="@+id/crop_imageview"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/withdraw_layout"
        android:background="#7f313131"
        android:layout_above="@+id/edit_picture_bottom_layout"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/red_paint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_pen_pot_red"
            android:layout_marginRight="20dp"/>
        <ImageView
            android:id="@+id/green_paint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_pen_pot_green"
            android:layout_marginRight="20dp"/>
        <ImageView
            android:id="@+id/blue_paint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_pen_pot_blue"
            android:layout_marginRight="20dp"/>
        <ImageView
            android:id="@+id/yellow_paint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_pen_pot_yellow"
            android:layout_marginRight="20dp"/>
        <ImageView
            android:id="@+id/black_paint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_pen_pot_black"
            android:layout_marginRight="20dp"/>
        <ImageView
            android:id="@+id/white_paint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_pen_pot_white"
            android:layout_marginRight="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/edit_graffiti_picture_withdraw"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_back"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mosaic_withdraw_layout"
        android:visibility="gone"
        android:background="#7f313131"
        android:layout_above="@+id/edit_picture_bottom_layout"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:paddingRight="10dp"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/edit_mosaic_picture_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_back"/>
    </LinearLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/crop_picture_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/photo_banner_black"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp">
        <TextView
            android:id="@+id/crop_cancle"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="×"
            android:textSize="20sp"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/crop_ok"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="√"
            android:textSize="20sp"
            android:textColor="@color/white" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/edit_picture_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/photo_banner_black"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp" >
        <ImageView
            android:id="@+id/tv_edit_picture_graffiti"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/edit_pic_graffiti"
            android:layout_alignParentLeft="true" />
        <ImageView
            android:id="@+id/tv_edit_picture_mosaic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@drawable/edit_pic_mosaic"
            android:layout_centerInParent="true" />
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_edit_picture_cut"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/edit_pic_crop" />
    </RelativeLayout>
</RelativeLayout>